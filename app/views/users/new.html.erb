
<% if @user.errors.any? %>
  <div id="error_explanation">
      <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited from creating your account
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
      </ul>
  </div>
  <% end %>

<h1>Sign Up</h1>
  
<%= form_for @user do |f|%>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.text_field :password %>
    </p>
    
      <%= f.submit %> 
<% end %>